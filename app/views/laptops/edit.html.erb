<h1>Edit Laptop</h1>
<%=form_for @laptop do |f|%>
  <div class="form-group">
    <%=f.label :title%>
    <%=f.text_field :title, class: "form-control"%>
  </div>

  <div class="form-group">
    <%=f.label :description%>
    <%=f.text_area :description, class: "form-control"%>
  </div>

  <div class="form-group">
    <%=f.label :price%>
    <%=f.text_field :price, class: "form-control"%>
  </div>

 <div class="form-group">
    <label for="laptop_published">Published</label> 
    </br>
    <%if @laptop.published%>
      <input type="radio" value="true" name="laptop[published]" id="laptop_published" checked="checked">True
      <input type="radio" value="false" name="laptop[published]" id="laptop_published">False
    <%else%>
      <input type="radio" value="true" name="laptop[published]" id="laptop_published">True
      <input type="radio" value="false" name="laptop[published]" id="laptop_published" checked="checked">False
    <%end%> 
  </div>

  <div class="actions">
    <%=f.submit "Edit", class: "btn btn-primary"%>
  </div>
<%end%> 
<%=link_to "Back", laptops_path%>